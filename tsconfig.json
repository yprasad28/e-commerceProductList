{
  "compilerOptions": {
    "target": "ES6",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "ESNext",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true
  },
  "include": ["src"]
}
